{% extends 'template.html.twig' %}

{% block PageTitle %}
	List people
{% endblock %}

{% block title %}
	{% trans %} List people in BDD{% endtrans %}
{% endblock %}

{% block body %}
	<div class="row">
		{% for personne in personnes %}
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">{{ personne.name }}</h5>
					<h6 class="card-subtitle mb-2 text-muted">{{ personne.firstname }}
						{{ personne.name }}</h6>
					<p class="card-text">{% trans %}Age{% endtrans %} :
						{{ personne.age }}.</p>
					<a href="{{ path('personne.detail',{id:personne.id})}}" class="card-link">
						<i class="fas fa-info-circle"></i>
					</a>

					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('personne.delete', {id: personne.id}) }}" class="card-link">
							<i class="fas fa-user-times"></i>
						</a>
						<a href="{{ path('personne.edit', {id: personne.id}) }}" class="card-link">
							<i class="fas fa-user-edit"></i>
						</a>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>

	{% if isPaginated is defined and isPaginated %}
		<div class="row mt-3">
			<nav aria-label="col Page navigation example">
				<ul class="pagination">
					{% if page != 1 %}
						<li class="page-item">
							<a class="page-link" href="{{ path('personne.list.alls', {page: page - 1, nbre: nbre}) }}">
								{% trans %}Previous{% endtrans %}
							</a>
						</li>
					{% endif %}
					{% for i in range(1, nbrePage) %}
						<li class="page-item">
							<a class="page-link" href="{{ path('personne.list.alls', {page: i, nbre: nbre}) }}">{{ i }}
							</a>
						</li>
					{% endfor %}
					{% if page != nbrePage %}
						<li class="page-item">
							<a class="page-link" href="{{ path('personne.list.alls', {page: page + 1, nbre: nbre}) }}">{% trans %}Suivant{% endtrans %}</a>
						</li>
					{% endif %}
				</ul>
			</nav>
		</div>
	{% endif %}
{% endblock %}
