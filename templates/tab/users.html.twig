{% extends 'template.html.twig' %}

{% block title %}
    {% trans %}Users{% endtrans %}
{% endblock %}

{% block PageTitle %}
    {% trans %}Users{% endtrans %}
{% endblock %}


{% block body %}
{{ include('fragments/date-jour.html.twig')}}
    <div class="alert alert-warning">
        <a href="{{ path('tab', {nb : 7 }) }}"> {% trans %}Statistics Table</a>
    </div>
<table class="table">
    <tr class="table-active">
        <td>{% trans %}tname{% endtrans %}</td>
        <td>{% trans %}Name{% endtrans %}</td>
        <td>{% trans %}Age{% endtrans %}</td>
        <td>{% trans %}Message{% endtrans %}</td>
    </tr>
    {% for user in users %}
    <tr class="table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
        <td>{{ user.firstname }}</td>
        <td>{{ user.name }}</td>
        <td>{{ user.age }}</td>
        <td>
            {{ render(controller('App\\Controller\\FirstController::sayBonjour',{firstname: user.firstname, name: user.name })) }}
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}